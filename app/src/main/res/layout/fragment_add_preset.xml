<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.presets.AddPresetFragment"
    android:padding="28dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/preset_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/name_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textAutoComplete"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/duration_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_duration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_label"
        tools:text="Duration:"
        />

    <EditText
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="3"
        android:importantForAutofill="no"
        android:background="@null"
        android:selectAllOnFocus="true"
        android:layout_marginTop="@dimen/margin_top_duration"
        android:layout_marginEnd="@dimen/margin_edge_duration"
        app:layout_constraintTop_toBottomOf="@id/name_label"
        app:layout_constraintEnd_toStartOf="@id/duration_minutes_label"
        tools:text="10"
        />

    <TextView
        android:id="@+id/duration_minutes_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/duration_minutes_label"
        android:layout_marginTop="@dimen/margin_top_duration"
        android:layout_marginEnd="@dimen/margin_edge_duration"
        app:layout_constraintTop_toBottomOf="@id/name_label"
        app:layout_constraintEnd_toStartOf="@id/subtract_icon"
        />

    <ImageView
        android:id="@+id/subtract_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_subtract"
        android:layout_marginTop="@dimen/margin_top_duration"
        android:layout_marginEnd="@dimen/margin_edge_duration"
        app:layout_constraintTop_toBottomOf="@id/name_label"
        app:layout_constraintEnd_toStartOf="@id/add_icon"
        />

    <ImageView
        android:id="@+id/add_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        android:layout_marginTop="@dimen/margin_top_duration"
        android:layout_marginEnd="@dimen/margin_edge_duration"
        app:layout_constraintTop_toBottomOf="@id/name_label"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>